{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cargo build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/rp2040-template",
            },
            "command": "cargo",
            "args": [
                "build"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "Build binary",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/rp2040-template",
            },
            "command": "arm-none-eabi-objcopy",
            "args": [
                "--output-target",
                "binary",
                "./target/thumbv6m-none-eabi/debug/rp2040-project-template",
                "./target/thumbv6m-none-eabi/debug/rp2040-project-template.bin"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Cargo build"
        }
    ]
}